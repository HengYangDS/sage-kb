# =============================================================================
# SAGE Knowledge Base - Environment Variables Template
# =============================================================================
# Copy this file to .env and update values as needed
# Do not commit .env to version control

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development | staging | production
SAGE_ENV=development

# Log level: DEBUG | INFO | WARNING | ERROR | CRITICAL
SAGE_LOG_LEVEL=INFO

# Enable debug mode (true | false)
SAGE_DEBUG=false

# =============================================================================
# Knowledge Base Settings
# =============================================================================

# Knowledge base root directory (default: .knowledge)
SAGE_KNOWLEDGE_ROOT=.knowledge

# Content root directory (default: .context)
SAGE_CONTEXT_ROOT=.context

# Maximum tokens per session
SAGE_MAX_TOKENS=8000

# =============================================================================
# Service Settings
# =============================================================================

# CLI Settings
SAGE_CLI_COLOR=true

# MCP Server Settings
SAGE_MCP_HOST=127.0.0.1
SAGE_MCP_PORT=8080

# API Server Settings
SAGE_API_HOST=127.0.0.1
SAGE_API_PORT=8000

# =============================================================================
# Timeout Settings (in seconds)
# =============================================================================

# T1: Quick operations (validation, formatting)
SAGE_TIMEOUT_T1=5

# T2: Standard operations (file operations)
SAGE_TIMEOUT_T2=30

# T3: Complex operations (analysis)
SAGE_TIMEOUT_T3=120

# T4: Long-running operations (batch processing)
SAGE_TIMEOUT_T4=600

# T5: Extended operations (full scan)
SAGE_TIMEOUT_T5=1800

# =============================================================================
# Feature Flags
# =============================================================================

# Enable experimental features (true | false)
SAGE_FEATURE_EXPERIMENTAL=false

# Enable analytics collection (true | false)
SAGE_FEATURE_ANALYTICS=false

# Enable plugin system (true | false)
SAGE_FEATURE_PLUGINS=true

# =============================================================================
# External Services (if applicable)
# =============================================================================

# Database URL (if using external database)
# SAGE_DATABASE_URL=postgresql://user:pass@localhost:5432/sage

# Redis URL (if using caching)
# SAGE_REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Security Settings
# =============================================================================

# API Key (for protected endpoints)
# SAGE_API_KEY=your-api-key-here

# Secret Key (for session encryption)
# SAGE_SECRET_KEY=your-secret-key-here
